<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_location_title"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_def_value"
        android:inputType="text"
        android:singleLine="true"
        />
    <ListPreference
        android:title="@string/pref_unit_title"
        android:key="@string/pref_unit_key"
        android:defaultValue="@string/pref_unit_def_value"
        android:entries="@array/pref_unit_names"
        android:entryValues="@array/pref_unit_values"
    />

</PreferenceScreen>